{
  "files": [],
  "compilerOptions": {
    "baseUrl":"./",
    "paths":{
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src"
  ],
  /* I have spent hours trying to fix this, i'm just gonna brute force each file that complains.*/
  "exclude": [ 
    "src/App.tsx",
    "src/components/ui/shadcn-io/interactive-grid-pattern/index.tsx",
    "src/keywords.ts",
    "src/lib/utils.ts",
    "src/main.tsx",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
  ]
}